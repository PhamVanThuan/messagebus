@model IEnumerable<YmatouMQAdmin.WebApp2.Models.UserInfo>

@{
    ViewBag.Title = "管理员权限列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <hr />
    <table class="table table-striped table-hover" width="100%">
        <thead>
            <tr>
                <th>
                    用户名
                </th>
                <th>
                    权限功能
                </th>
                <th>
                    操作
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="text-align:left">
                    <td>
                        @Html.DisplayFor(modelItem => item.username)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Roles)
                    </td>
                    <td>
                        <p> @Html.ActionLink("编辑", "EditRole", new { username = item.username }, new { @class = "btn btn-info" })</p>
                        <p>@Html.ActionLink("删除", "DeleteRole", new { username = item.username }, new { @class = "btn btn-danger" })</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        @*<button type="button" class="btn btn-primary btn-lg" onclick="javascript:window.location.href='/LogOn/CreateRole'">
            <span class="glyphicon glyphicon-user"></span>创建用户
        </button>*@
        @Html.ActionLink("创建用户", "CreateRole", null, new { @class = "btn btn-primary" })
        @if (TempData["msg"] != null)
        {
            <span id="opresult" class="text-error"> <small>  @TempData["msg"].ToString()</small></span>
        }
    </p>
</div>